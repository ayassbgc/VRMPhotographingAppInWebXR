{
  "compilerOptions": {
    "target": "es2016",
    //"target": "ESNext",
    "useDefineForClassFields": true,
    //"module": "ESNext",
    //"lib": ["ESNext", "DOM"],
    "lib": ["dom"],
		"module": "es6",
		"outDir": "./dist",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
